{
  "name": "jmoyers.org",
  "version": "1.0.0",
  "description": "Personal website built with 11ty and TypeScript",
  "private": true,
  "scripts": {
    "clean": "rimraf dist .cache .turbo",
    "build:css": "sass src/assets/scss/blog.scss dist/css/blog.css --style=compressed --no-source-map",
    "build:css:dev": "sass src/assets/scss/blog.scss dist/css/blog.css --style=expanded --source-map",
    "build:11ty": "NODE_ENV=production eleventy",
    "build:11ty:dev": "eleventy",
    "build": "npm-run-all clean build:css build:11ty",
    "watch:css": "sass src/assets/scss/blog.scss dist/css/blog.css --watch --style=expanded --source-map",
    "watch:11ty": "eleventy --serve --watch",
    "dev": "npm-run-all clean build:css:dev --parallel watch:css watch:11ty",
    "serve": "eleventy --serve",
    "deploy": "echo 'Deploy script will be added later'"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "cheerio": "^1.1.0",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^6.0.2",
    "html-minifier": "^4.0.0",
    "markdown-it": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "tsx": "^4.6.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.9.2"
}
